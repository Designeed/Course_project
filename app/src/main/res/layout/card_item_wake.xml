<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    android:id="@+id/srlCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mode="same_level"
    app:dragEdge="right"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="10dp">

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/ibAddAlarm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add_alarm"
                android:foregroundTint="@color/white"
                android:background="@color/transparent"
                android:layout_gravity="center"
                android:contentDescription="@string/add_alarm" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            style="@style/card_style">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitleCard"
                    style="@style/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|top"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/tvSecCard"
                    style="@style/txt"
                    android:layout_below="@id/tvTitleCard"
                    android:gravity="start|bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>